						</xp:td>
			<xp:td>
				<xp:inputText id="inputText1"
					value="#{document1.jsFilterHtmlSubject}">
				</xp:inputText></xp:td>
		</xp:tr>
		<xp:tr>
			<xp:td>
	body</xp:td>
